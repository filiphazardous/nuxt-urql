{
  "root": true,
  "extends": [
    "@nuxt/eslint-config",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "eslint-plugin-tsdoc"
  ],
  "rules": {
    "tsdoc/syntax": "warn"
  },
  "overrides": [
    {
      "files": ["*.graphql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"],
      "rules": {
        "@graphql-eslint/known-type-names": "error"
      }
    }
  ]
}
